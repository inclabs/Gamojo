<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "fill_parent"
              android:layout_height = "fill_parent">
    <ImageView
            android:layout_width = "fill_parent"
            android:layout_height = "80dp"
            android:layout_margin = "10dp"
            android:id = "@+id/matchPic"/>
    <LinearLayout android:layout_width = "fill_parent"
                  android:layout_height = "wrap_content">
        <EditText android:layout_width = "150dp"
                  android:id = "@+id/firstTeam"
                  android:layout_height = "wrap_content"
                  android:text = "IND"/>
        <EditText android:layout_width = "150dp"
                  android:id = "@+id/firstScore"
                  android:layout_height = "wrap_content"
                  android:text = "79/13.5"/>
    </LinearLayout>
    <LinearLayout android:layout_width = "fill_parent"
                  android:layout_height = "wrap_content">
        <EditText android:layout_width = "150dp"
                  android:layout_height = "wrap_content"
                  android:id = "@+id/secondTeam"
                  android:text = "PAK"/>
        <EditText android:layout_width = "150dp"
                  android:id = "@+id/secondScore"
                  android:layout_height = "wrap_content"
                  android:text = "150/20"/>
    </LinearLayout>
    <ListView android:layout_width = "fill_parent"
              android:id = "@+id/discussList"
              android:layout_marginTop = "20dp"
              android:layout_height = "90dp">
    </ListView>
    <Button android:layout_width = "fill_parent"
            android:id = "@+id/moreDiscuss"
            android:text = "More Discussions"
            android:layout_height = "35dp"/>
    <ListView android:layout_width = "fill_parent"
              android:id = "@+id/betsList"
              android:layout_height = "90dp">
    </ListView>
    <Button android:layout_width = "fill_parent"
            android:id = "@+id/moreBets"
            android:text = "Place Bets"
            android:layout_height = "35dp"/>
    <ListView android:layout_width = "fill_parent"
              android:id = "@+id/pollsList"
              android:layout_height = "90dp">
    </ListView>
    <Button android:layout_width = "fill_parent"
            android:id = "@+id/morePolls"
            android:text = "Answer Polls"
            android:layout_height = "35dp"/>
</LinearLayout>