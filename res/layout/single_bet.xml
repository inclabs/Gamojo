<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent">
    <LinearLayout android:layout_width = "fill_parent"
                  android:layout_height = "wrap_content">
        <TextView android:layout_width = "240dp"
                  android:textSize = "25dp"
                  android:id = "@+id/singleBetStatement"
                  android:text = "India will win the match"
                  android:layout_height = "wrap_content"/>
        <TextView android:layout_width = "50dp"
                  android:id = "@+id/singleBetOdds"
                  android:layout_height = "wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width = "fill_parent"
                  android:layout_margin = "15dp"
                  android:layout_height = "wrap_content">
        <TextView android:layout_width = "80dp"
                  android:layout_height = "wrap_content"
                  android:id = "@+id/singleBetAmount"
                  android:textSize = "20dp"
                  android:text = "Amount"/>
        <Spinner
                android:layout_width = "140dp"
                android:id = "@+id/singleBetSpinner"
                android:layout_height = "40dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width = "fill_parent"
                  android:layout_height = "wrap_content">
        <Button android:layout_width = "150dp"
                android:layout_height = "wrap_content"
                android:id = "@+id/like"
                android:text = "Thumbs Down"/>
        <Button android:layout_width = "150dp"
                android:layout_height = "wrap_content"
                android:id = "@+id/dislike"
                android:text = "Thumbs Up"/>
    </LinearLayout>
</LinearLayout>